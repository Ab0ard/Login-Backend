<!DOCTYPE html>
<html lang="en" style="width: 100%; height: 100%">
    <head>
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Growtopia Player Support</title>
        <link
            rel="icon"
            type="image/png"
            href="https://s3.eu-west-1.amazonaws.com/cdn.growtopiagame.com/website/resources/assets/images/growtopia.ico"
            sizes="16x16"
        />
        <link
            rel="shortcut icon"
            href="https://s3.eu-west-1.amazonaws.com/cdn.growtopiagame.com/website/resources/assets/images/growtopia.ico"
            type="image/x-icon"
        />
        <link
            rel="icon"
            href="https://s3.eu-west-1.amazonaws.com/cdn.growtopiagame.com/website/resources/assets/images/growtopia.ico"
            type="image/x-icon"
        />
        
        <!-- Include pixel font -->
        <link href="https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap" rel="stylesheet">
        
        <style>
            body, html {
                margin: 0;
                padding: 0;
                height: 100%;
                width: 100%;
                font-family: 'Press Start 2P', cursive;
                color: #ffffff;
                overflow: hidden;
                background-color: transparent;
            }
            
            .grid-bg {
                position: fixed;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background-image: 
                    linear-gradient(to right, rgba(15, 15, 27, 0.3) 1px, transparent 1px),
                    linear-gradient(to bottom, rgba(15, 15, 27, 0.3) 1px, transparent 1px);
                background-size: 20px 20px;
                background-color: transparent;
                pointer-events: none;
            }
            
            .stars {
                position: fixed;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                overflow: hidden;
                pointer-events: none;
            }
            
            .star {
                position: absolute;
                background-color: white;
                width: 2px;
                height: 2px;
                border-radius: 50%;
                animation: twinkle 2s infinite;
                opacity: 0.4;
            }
            
            @keyframes twinkle {
                0% { opacity: 0.2; }
                50% { opacity: 0.6; }
                100% { opacity: 0.2; }
            }
            
            .login-box {
                position: absolute;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
                width: 280px;
                border: 4px solid #39ff14;
                background-color: rgba(26, 26, 46, 0.85);
                box-shadow: 0 0 10px #39ff14, inset 0 0 10px #39ff14;
                padding: 20px;
                text-align: center;
                image-rendering: pixelated;
            }
            
            .pixel-logo {
                width: 80px;
                height: 80px;
                margin: 0 auto 20px;
                image-rendering: pixelated;
            }
            
            h2 {
                font-size: 16px;
                margin-bottom: 20px;
                color: #39ff14;
                text-shadow: 2px 2px 0 #000;
                letter-spacing: 2px;
            }
            
            .input-field {
                background-color: rgba(15, 15, 27, 0.5);
                border: 2px solid #39ff14;
                color: #39ff14;
                font-family: 'Press Start 2P', cursive;
                padding: 8px;
                width: 100%;
                margin-bottom: 15px;
                box-sizing: border-box;
                font-size: 10px;
            }
            
            .input-field:focus {
                outline: none;
                box-shadow: 0 0 5px #39ff14;
            }
            
            .pixel-btn {
                background-color: #39ff14;
                color: #000;
                border: none;
                font-family: 'Press Start 2P', cursive;
                padding: 10px 15px;
                cursor: pointer;
                margin-top: 5px;
                width: 100%;
                font-size: 12px;
                transition: all 0.2s;
            }
            
            .pixel-btn:hover {
                background-color: #4aef32;
                transform: scale(1.05);
            }
            
            .pixel-btn:active {
                transform: scale(0.95);
            }
            
            .register-btn {
                background-color: transparent;
                border: 2px solid #f1c40f;
                color: #f1c40f;
                margin-top: 15px;
            }
            
            .register-btn:hover {
                background-color: #f1c40f;
                color: #000;
            }
            
            .error-message {
                background-color: #ff0044;
                color: white;
                padding: 8px;
                margin-bottom: 15px;
                border: 2px solid #ff0044;
                font-size: 8px;
                display: none;
            }
            
            .success-message {
                background-color: #39ff14;
                color: #000;
                padding: 8px;
                margin-bottom: 15px;
                border: 2px solid #39ff14;
                font-size: 8px;
                display: none;
            }
            
            @keyframes float {
                0% { transform: translate(-50%, -50%); }
                50% { transform: translate(-50%, -54%); }
                100% { transform: translate(-50%, -50%); }
            }
            
            .float {
                animation: float 2s infinite ease-in-out;
            }
        </style>
    </head>
    <body>
        <div class="grid-bg"></div>
        <div class="stars" id="stars"></div>
        
        <div class="login-box float">
            <img src="https://s3.eu-west-1.amazonaws.com/cdn.growtopiagame.com/website/resources/assets/images/growtopia.ico" class="pixel-logo" alt="Growtopia Logo">
            
            <h2>GTPS ID LOGIN</h2>
            
            <div id="errorDiv" class="error-message">
                <span id="errorMessage"></span>
            </div>
            
            <div id="successDiv" class="success-message">
                <span id="successMessage"></span>
            </div>
            
            <form method="POST" action="/player/growid/login/validate" accept-charset="UTF-8" role="form" id="loginForm">
                <input name="_token" type="hidden" value="<%= data %>" />
                
                <input id="login-name" class="input-field" placeholder="GrowID" name="growId" type="text" />
                
                <input id="password" class="input-field" placeholder="Password" name="password" type="password" value="" />
                
                <button type="submit" class="pixel-btn">
                    LOGIN
                </button>
            </form>
            
            <form method="POST" action="/player/growid/login/validate" accept-charset="UTF-8" role="form">
                <input name="_token" type="hidden" value=""/> 
                <input name="growId" type="hidden" value=""/> 
                <input name="password" type="hidden" value=""/>
                
                <button type="submit" class="pixel-btn register-btn">
                    REGISTER
                </button>
            </form>
        </div>
        
        <script>
            // Create stars for background
            document.addEventListener('DOMContentLoaded', function() {
                const starsContainer = document.getElementById('stars');
                const starCount = 80;
                
                for (let i = 0; i < starCount; i++) {
                    const star = document.createElement('div');
                    star.classList.add('star');
                    
                    // Random position
                    star.style.left = `${Math.random() * 100}%`;
                    star.style.top = `${Math.random() * 100}%`;
                    
                    // Random size
                    const size = Math.random() * 2 + 1;
                    star.style.width = `${size}px`;
                    star.style.height = `${size}px`;
                    
                    // Random twinkle delay
                    star.style.animationDelay = `${Math.random() * 2}s`;
                    
                    starsContainer.appendChild(star);
                }
            });
            
            // Form validation
            document.getElementById('loginForm').addEventListener('submit', function(e) {
                e.preventDefault();
                
                const uName = document.getElementById('login-name').value;
                const uPass = document.getElementById('password').value;
                
                const errorDiv = document.getElementById('errorDiv');
                const errorMessage = document.getElementById('errorMessage');
                const successDiv = document.getElementById('successDiv');
                const successMessage = document.getElementById('successMessage');
                
                // Reset messages
                errorDiv.style.display = 'none';
                successDiv.style.display = 'none';
                
                if (!uName || !uPass) {
                    errorMessage.textContent = 'Username or Password is empty';
                    errorDiv.style.display = 'block';
                    return false;
                } else if (uName.length < 4 || uPass.length < 4) {
                    errorMessage.textContent = 'Username or Password must be at least 4 characters';
                    errorDiv.style.display = 'block';
                    return false;
                } else {
                    successMessage.textContent = 'Logging in...';
                    successDiv.style.display = 'block';
                    
                    // Save GrowID
                    localStorage.setItem('growId', uName);
                    
                    // Submit after short delay
                    setTimeout(() => {
                        this.submit();
                    }, 800);
                }
            });
            
            // Auto-fill if saved
            if (localStorage.getItem('growId')) {
                document.getElementById('login-name').value = localStorage.getItem('growId');
            }
            
            // Prevent dev tools
            document.onkeydown = e => {
                if (e.key == 123) e.preventDefault();
                if (e.key == 'F12') e.preventDefault();
                if (e.ctrlKey && e.shiftKey && e.key == 'I') e.preventDefault();
                if (e.ctrlKey && e.key == 'I') e.preventDefault();
                if (e.ctrlKey && e.shiftKey && e.key == 'C') e.preventDefault();
                if (e.ctrlKey && e.shiftKey && e.key == 'J') e.preventDefault();
                if (e.ctrlKey && e.key == 'U') e.preventDefault();
            };
        </script>
    </body>
</html>
